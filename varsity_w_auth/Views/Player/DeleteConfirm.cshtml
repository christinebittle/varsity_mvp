@model varsity_w_auth.Models.PlayerDto

@{
    ViewBag.Title = "Delete Player";
    Layout = "~/Views/Shared/_AdminView.cshtml";
}


<h3>Are you sure you want to delete this player?</h3>
<div>
    <dl class="dl-horizontal">
       
        <dt>
            @Html.DisplayNameFor(model => model.PlayerFirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PlayerFirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PlayerLastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PlayerLastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model=>model.PlayerBio)
        </dt>

        <dd>
            @Html.Raw(Model.PlayerBio)
        </dd>

    </dl>

    @using (Html.BeginForm("Delete", "Player", new { id=Model.PlayerID})) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> &nbsp;&nbsp;
            @Html.ActionLink("Back to List", "List")
        </div>
    }
</div>
