@model varsity_w_auth.Models.ViewModels.ListTeams

@{
    ViewBag.Title = "View";
}

<h2>View</h2>
@if (Model.isadmin)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            Team Name
        </th>
        <th>
            Number of Players
        </th>
        <th >
            Action
        </th>
    </tr>

@foreach (var team in Model.teams) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => team.TeamName)
        </td>
        
        <td>
            @team.NumPlayers
        </td>
        <td>
            @if (Model.isadmin)
            {
            <span style="margin-right:5px;">@Html.ActionLink("Edit", "Edit", new { id = team.TeamID })</span>
            }
            @Html.ActionLink("Details", "Details", new { id=team.TeamID })
            
        </td>
    </tr>
}

</table>
